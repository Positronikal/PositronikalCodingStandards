root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_size = 2
max_line_length = 79

[*.{py,sh,bash}]
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 2

[*.{js,ts,json,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
